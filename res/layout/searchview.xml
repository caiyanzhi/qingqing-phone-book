
<RelativeLayout android:layout_height="72dp" 
    android:layout_width="fill_parent" 
    android:orientation="horizontal"
    android:focusable="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

  
    <TextView
        android:id="@+id/name"
        android:text="姓名"
        android:textSize="28px"
        android:textColor="#808080" 
		android:layout_height="wrap_content" 
        android:layout_width="136dp"
         android:singleLine="true"
        android:ellipsize="end"      
 		   android:layout_marginLeft="10dp"	
 		   android:layout_alignParentTop="true"             
        android:layout_marginTop="16dp"  
       />
    
    <TextView
        android:id="@+id/phone"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="28px"
        android:textColor="#808080"  
         android:layout_below="@+id/name"
         android:layout_alignLeft="@id/name"
        android:singleLine="true"
        android:ellipsize="end"      
         />
       
       <Button
        android:id="@+id/sentMess_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/sendmessage_s" 
        />
    
        <Button
        android:id="@+id/dial_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:background="@drawable/call_s" 
    	android:layout_toLeftOf="@id/sentMess_bt"
    	android:layout_centerVertical="true"
		  />
       
    

</RelativeLayout>