<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
   >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >    
      
    <RelativeLayout 
        android:layout_height="48dp"
        android:layout_width="fill_parent"
        android:background="#9EC777"
        >
        <Button
            android:background="@drawable/back_s"
            android:id="@+id/back"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:text=" 编辑标签"
            android:id="@+id/text"
            android:focusable="true"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/back"
            />
                     
       <Button 
            android:background="@drawable/ok_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/save"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
           />
        
    </RelativeLayout>
     <RelativeLayout 
         android:layout_height="48dp"
         android:layout_width="fill_parent"
         >
            <EditText
                android:id="@+id/labelText"
                   android:hint="添加新标签"
                   android:singleLine="true"
              android:textColorHint="#9ec777"
               android:textColor="#9ec777"
                android:gravity="center_vertical"
                android:layout_marginLeft="36dp"
                android:layout_width="240dp"
                android:layout_height="48dp"
                android:background="#f5f5f5"
                 />
              <TextView
               android:layout_marginLeft="36dp"            
                android:id="@+id/labelText2"
                android:background="#00000000"
                android:textSize = "20sp"
                android:textColor="#808080"
                android:layout_width="fill_parent"
                android:layout_height="48dp"
                android:focusable="true"           
                 />
              
              <Button
                  android:id="@+id/ok"
                  android:background="@drawable/okforlabelrow_s"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"                  
                  />
      </RelativeLayout>
      
         <TextView
       android:layout_width="fill_parent"
       android:layout_height="36dp"
       android:text="    选中的标签"
       android:gravity="center_vertical"
       android:textColor="#ffffff"
        android:textSize="25px"
       android:background="@drawable/rowtitleforlabel"
     />
      
     <LinearLayout 
         android:id="@+id/addSets"
         android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
         
     </LinearLayout>
             <TextView
       android:layout_width="fill_parent"
       android:layout_height="36dp"
       android:text="    已有标签"
       android:gravity="center_vertical"
       android:textColor="#ffffff"
        android:textSize="25px"
       android:background="@drawable/rowtitleforlabel"
     />
     <LinearLayout
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:id="@+id/labelList"
         android:orientation="vertical"
         >
    </LinearLayout>
</LinearLayout>
</ScrollView>