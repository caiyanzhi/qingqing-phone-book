<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
       <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:focusable="true"
            
         >

            <Button
                android:id="@+id/searchImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/searchicon"
                android:layout_marginLeft="8dp"               
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/searchText2"
                android:layout_centerInParent="true"
         		 android:background="#f5f5f5"
         		 android:text=""
                android:textSize = "32px"
                android:layout_width="206dp"
                android:layout_height="48dp"
                android:focusable="true"             
                android:layout_alignTop="@+id/searchImage"
                android:layout_toRightOf="@+id/searchImage"
                android:layout_marginLeft="3dp"
                android:layout_centerVertical="true"                
                 />
          
            <EditText
                android:id="@+id/searchText"
                android:singleLine="true"
                 android:background="#f5f5f5"
                 android:textSize = "32px"
                 android:hint="搜索"
                android:textColorHint="#9ec777"
                android:textColor="#808080"
                android:layout_width="206dp"
                android:layout_height="48dp"
                android:layout_toRightOf="@+id/searchImage"
                android:layout_marginLeft="3dp"
                android:layout_centerVertical="true"
                 />
            <Button
                android:id="@+id/addContacter"
                android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                android:layout_alignParentRight="true"         
                android:layout_centerVertical="true"
                android:background="@drawable/addpeople_s"
                
                 />

        </RelativeLayout>
        
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ListView
                    android:id="@+id/allListView"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:divider="#00ffffff"
                   >

        </ListView>

    </LinearLayout>
    
</LinearLayout>